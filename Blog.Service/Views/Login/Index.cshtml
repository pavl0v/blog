@model Blog.Service.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<h2>Login</h2>

<form method="post" asp-controller="Login" asp-action="Index">
    <table>
        <tr>
            <td style="width: 100px;"><label asp-for="username">Login</label></td>
            <td><input asp-for="username" name="username" /></td>
        </tr>
        <tr>
            <td><label asp-for="password">Password</label></td>
            <td><input asp-for="password" name="password" /></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align: right;"><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form> 